#ifndef PARTICLE_H
#define PARTICLE_H
#include "World/World.h"


class Particle
{
  
    protected:

      
      int intensity;
      
  
  
      
      
    public:
      Particle();
      ~Particle();
      
      bool e;
      bool n;
      bool w;
      bool s;
      
      bool eNext;
      bool nNext;
      bool wNext;
      bool sNext;
      
      int getIntensity();
      void setIntensity(int _intensity);
      
      /* set all velocities (e, n, w, s) to zero */
      void reset();
      
      /* Set eNext, nNext, wNext, sNext to zero */
      void resetBuffer();
      
      void swap();
      
      /*  */
      void translation(Particle *p);
      
      void handleCollision();
      
};

#endif // PARTICLE_H
